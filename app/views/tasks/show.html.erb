<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed ? "Completed" : "TO DO" %></p>


<p><%= link_to "Delete task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>

<p><%= link_to 'Edit task', edit_task_path(@task.id) %></p>

<p><%= link_to 'View all tasks', tasks_path %></p>
