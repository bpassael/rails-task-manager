
<h1>All tasks</h1>

<h2>TO DO</h2>
<% @tasks.each do |task| %>
<ul>
    <% unless task.completed %>
    <li>
    <%= link_to task.title, task_path(task) %>
     <%= link_to "Delete task",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
  </li>
</ul>
<% end %>
<% end %>

<h2>Completed tasks</h2>
<% @tasks.each do |task| %>
<ul>
    <% if task.completed %>
    <li>
    <%= link_to task.title, task_path(task) %>
     <%= link_to "Delete task",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
  </li>
</ul>
<% end %>
<% end %>





<p><%= link_to 'Add a new task', new_task_path %></p>
